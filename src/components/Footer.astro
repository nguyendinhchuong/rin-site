---
import { sanityClient } from '@/lib/sanity';
import { siteSettingsQuery } from '@/lib/queries';

const currentLocale = Astro.url.pathname.startsWith('/en') ? 'en' : 'vi';

const siteSettings = await sanityClient.fetch(siteSettingsQuery, {
  language: currentLocale,
});

const currentYear = new Date().getFullYear();
---

<footer class="border-t bg-muted/40">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <!-- Company Info -->
      <div>
        <h3 class="mb-4 text-lg font-semibold">{siteSettings?.siteName}</h3>
        <p class="text-sm text-muted-foreground">{siteSettings?.siteDescription}</p>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="mb-4 text-lg font-semibold">{currentLocale === 'vi' ? 'Liên hệ' : 'Contact'}</h3>
        <div class="space-y-2 text-sm text-muted-foreground">
          {siteSettings?.contactEmail && (
            <p>
              <strong>{currentLocale === 'vi' ? 'Email:' : 'Email:'}</strong>{' '}
              <a href={`mailto:${siteSettings.contactEmail}`} class="hover:underline">
                {siteSettings.contactEmail}
              </a>
            </p>
          )}
          {siteSettings?.contactPhone && (
            <p>
              <strong>{currentLocale === 'vi' ? 'Điện thoại:' : 'Phone:'}</strong>{' '}
              <a href={`tel:${siteSettings.contactPhone}`} class="hover:underline">
                {siteSettings.contactPhone}
              </a>
            </p>
          )}
          {siteSettings?.address && (
            <p>
              <strong>{currentLocale === 'vi' ? 'Địa chỉ:' : 'Address:'}</strong> {siteSettings.address}
            </p>
          )}
        </div>
      </div>

      <!-- Social Media -->
      <div>
        <h3 class="mb-4 text-lg font-semibold">{currentLocale === 'vi' ? 'Mạng xã hội' : 'Social Media'}</h3>
        <div class="flex gap-4">
          {siteSettings?.socialMedia?.facebook && (
            <a
              href={siteSettings.socialMedia.facebook}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground"
              aria-label="Facebook"
            >
              Facebook
            </a>
          )}
          {siteSettings?.socialMedia?.twitter && (
            <a
              href={siteSettings.socialMedia.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground"
              aria-label="Twitter"
            >
              Twitter
            </a>
          )}
          {siteSettings?.socialMedia?.linkedin && (
            <a
              href={siteSettings.socialMedia.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground"
              aria-label="LinkedIn"
            >
              LinkedIn
            </a>
          )}
          {siteSettings?.socialMedia?.instagram && (
            <a
              href={siteSettings.socialMedia.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground"
              aria-label="Instagram"
            >
              Instagram
            </a>
          )}
        </div>
      </div>
    </div>

    <div class="mt-8 border-t pt-8 text-center text-sm text-muted-foreground">
      <p>&copy; {currentYear} {siteSettings?.siteName}. {currentLocale === 'vi' ? 'Tất cả quyền được bảo lưu.' : 'All rights reserved.'}</p>
    </div>
  </div>
</footer>

